<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">
<!--<android.support.v7.widget.CardView
	android:layout_width="match_parent"
	android:layout_height="wrap_content">-->


		<android.support.v7.widget.CardView
			xmlns:card_view="http://schemas.android.com/apk/res-auto"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginTop="2dp"
			android:layout_marginLeft="3dp"
			android:layout_marginRight="3dp"
			card_view:cardUseCompatPadding="true"
			card_view:cardElevation="4dp"
			card_view:cardCornerRadius="2dp">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_marginTop="@dimen/margin_2">
		<ImageView
			android:id="@+id/image"
			android:layout_width="match_parent"
			android:layout_height="@dimen/margin_100"/>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_marginLeft="@dimen/margin_10"
			android:layout_marginRight="@dimen/margin_10"
			android:layout_marginTop="@dimen/margin_10"
			android:gravity="center">
		<TextView
			android:id="@+id/cat_name"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text=""
			android:textStyle="normal"
			android:textSize="@dimen/text_16"
			android:textColor="@color/text_black"
			android:maxLines="1"
			android:ellipsize="end"
			android:layout_weight=".3"/>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center|right"
				android:layout_weight=".7"
				android:layout_gravity="center">
				<ImageView
					android:layout_width="@dimen/margin_18"
					android:layout_height="@dimen/margin_18"
					android:background="@mipmap/km"/>
			<TextView
				android:id="@+id/distanceinkm"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text=" "
				android:textStyle="normal"
				android:textSize="@dimen/text_11"
				android:textColor="@color/text_black_light"
				android:maxLines="1"
				android:gravity="center"
				android:ellipsize="end"/>
			</LinearLayout>
		</LinearLayout>
		<TextView
			android:id="@+id/daydate"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColor="@color/text_black_light"
			android:textSize="@dimen/text_11"
			android:text="2 hours ago"
			android:visibility="gone"
			android:layout_marginBottom="@dimen/margin_3"
			android:layout_marginLeft="@dimen/margin_10"
			android:layout_marginRight="@dimen/margin_10"/>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_marginLeft="@dimen/margin_5"
			android:layout_marginRight="@dimen/margin_10"
			android:gravity="center"
			android:paddingBottom="@dimen/margin_7">
			<ImageView
				android:layout_width="@dimen/margin_20"
				android:layout_height="@dimen/margin_20"
				android:background="@mipmap/location"/>
		<TextView
			android:id="@+id/cat_location"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text=""
			android:textStyle="normal"
			android:textSize="@dimen/text_14"
			android:textColor="@color/text_black_light"
			android:maxLines="1"
			android:paddingLeft="@dimen/margin_3"/>
	</LinearLayout>
	</LinearLayout>

</android.support.v7.widget.CardView>

</LinearLayout>